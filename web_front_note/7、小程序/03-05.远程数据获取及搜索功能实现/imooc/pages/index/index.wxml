<view class="header">
  <input
    type="text"
    class="header-input"
    placeholder="AngularJS·MySQL·Java"
    placeholder-class="header-input-placeholder"
    bindinput="handleInputChange"
  />
  <icon
    type="search"
    class="header-input-icon"
    size="13"
    wx:if="{{showIcon}}"
  />
</view>
<view class="navigator">
  <view class="navigator-item">
    <image
      class="navigator-img"
      src="../../resources/recommend.png"
    />
    推荐
    <view class="navigator-acitve" />
  </view>
  <view class="navigator-item">
    <image
      class="navigator-img"
      src="../../resources/path.png"
    />
    路径
  </view>
  <view class="navigator-item">
    <image
      class="navigator-img"
      src="../../resources/project.png"
    />
    实战
  </view>
  <view class="navigator-item">
    <image
      class="navigator-img"
      src="../../resources/activity.png"
    />
    活动
  </view>
</view>
<swiper
  previous-margin="18rpx"
  next-margin="18rpx"
  circular="{{true}}"
  autoplay="{{true}}"
  class="swiper"
>
  <swiper-item
    wx:for="{{swiperList}}"
    class="swiper-item"
    wx:key="*this"
  >
    <image class="swiper-image" src="{{item.imgUrl}}" />
  </swiper-item>
</swiper>
<view class="project">
  <view class="project-title">实战推荐</view>
  <view
    class="project-empty"
    hidden="{{!(searchList && searchList.length == 0)}}"
  >无搜索结果</view>
  <view
    class="project-item"
    wx:for="{{searchList ? searchList : courses}}"
    wx:key="*this"
  >
    <image
      class="project-item-pic"
      src="{{item.imgUrl}}"
    />
    <view class="project-item-content">
      <view class="project-item-title">
        {{item.title}}
      </view>
      <view class="project-item-tags">
        <view
          wx:if="{{item.promotion}}"
          class="project-item-price-active"
        >¥{{item.price}}</view>
        <view
          wx:if="{{!item.promotion}}"
          class="project-item-text"
        >¥{{item.price}}</view>
        <view
          wx:if="{{item.notice}}"
          class="project-item-notice"
        >{{item.notice}}</view>
        <view class="project-item-text">
          {{item.level}}
        </view>
        <view class="project-item-user">
          <image
            class="project-item-icon"
            src="../../resources/user.png"
          />
          {{item.sales}}
        </view>
      </view>
    </view>
  </view>
</view>