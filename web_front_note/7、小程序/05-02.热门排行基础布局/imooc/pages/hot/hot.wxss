.tabs {
  display: flex;
  padding: 0 120rpx;
  height: 88rpx;
  box-shadow: 0 2px 4px 0 rgba(0,0,0,0.10);
}
.tab {
  flex: 1;
  position: relative;
  line-height: 72rpx;
  text-align: center;
  font-size: 36rpx;
  color: #71777D;
}
.active {
  color: #2B333B;
}
.active-bar {
  position: absolute;
  top: 66rpx;
  left: 110rpx;
  width: 36rpx;
  height: 4rpx;
  border-radius: 2rpx;
  background:#F01414;
}
.time {
  display: flex;
  margin: 40rpx auto;
  width: 240rpx;
  height: 64rpx;
  border: 1px solid #71777D;
  border-radius: 4px;
  font-size: 28rpx;
  
}
.week, .month {
  flex: 1;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  background: #fff;
  color:#71777D;
  border-radius: 6rpx;
  margin: 6rpx;
}
.time-active {
  background: #71777D;
  color: #fff;
}
.list {
  margin-top: 24rpx;
}
.item {
  margin: 0 48rpx 40rpx 48rpx;
  display: flex;
}
.item-image {
  width: 180rpx;
  height: 120rpx;
  border-radius: 8px;
}
.item-title {
  margin-left: 24rpx;
  font-size: 28rpx;
  color: #2B333B;
  line-height: 40rpx;
}